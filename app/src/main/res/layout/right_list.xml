<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@mipmap/bg_slidingmenu_left"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:src="@mipmap/biz_pc_main_info_profile_avatar_bg_dark"
        android:layout_width="180dp"
        android:layout_height="180dp"/>
    <Button
        android:id="@+id/btn_login"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="立刻登陆"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_width="260dp"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/ib_weixin"
            android:layout_margin="4dp"
            android:src="@mipmap/fun_share_weixin"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:id="@+id/ib_qq"
            android:layout_margin="4dp"
            android:src="@mipmap/addimport_qq"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:id="@+id/ib_friends"
            android:layout_margin="4dp"
            android:src="@mipmap/fun_share_friends"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:id="@+id/ib_weibo"
            android:layout_margin="4dp"
            android:src="@mipmap/fun_share_weibo"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/tv_share"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:text="一键分享"
        android:layout_width="150dp"
        android:layout_height="60dp"/>

    <TextView
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:text="版本更新.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"/>


</LinearLayout>